{
  "name": "plusegrid",
  "version": "1.0.0",
  "description": "PulseGrid - Modern healthcare platform with micro-frontend architecture",
  "private": true,
  "author": "Abdullah T Bukhari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pulse-grid.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules/.cache .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "storybook": "turbo run storybook --filter=@pulsegrid/ui",
    "prepare": "husky install || true"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.10"
    }
  },
  "devDependencies": {
    "@module-federation/nextjs-mf": "^8.8.41",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}
